{
  "name": "mocha-gherkin",
  "version": "0.1.0",
  "description": "mocha-gherkin is a Gherkin-style interface and reporter add-on for mocha.",
  "keywords": [
    "mocha",
    "gherkin",
    "bdd",
    "cucumber",
    "test",
    "feature",
    "scenario",
    "user story"
  ],
  "author": "James G. Kim <jgkim@jayg.org> (http://jayg.org/)",
  "bugs": "https://github.com/jgkim/mocha-gherkin/issues",
  "repository": "jgkim/mocha-gherkin",
  "license": "MIT",
  "main": "build/index.js",
  "scripts": {
    "prepublish": "npm run compile",
    "compile": "babel -d build src",
    "lint": "eslint .",
    "test": "mocha --opts tests/mocha.opts --recursive tests",
    "clean": "rm -rf build"
  },
  "dependencies": {
    "colors": "latest"
  },
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "chai": "latest",
    "del": "^2.1.0",
    "eslint": "^1.10.1",
    "eslint-config-tipplr": "^0.1.3",
    "gulp": "^3.9.0",
    "mocha": "latest"
  }
}
